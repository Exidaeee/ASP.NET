@page
@model ShopRazor_Temp.Pages.Categories.IndexModel

<div class="conrainer">
      <div class="row pt-4 pb-3">
          <div class="col-6 ">
              <h2 class="lext-primary"> Category List </h2>
          </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-outline-success">
              Create new Category
            </a>
        </div>
      </div>
<table class= "table table-bordered table-striped">
    <thead>
   <tr>
       <th>
           Category Name
       </th>
        <th>
            Display Order
        </th>
   </tr>
   </thead>
   <tbody>
    @foreach(var obj in Model.categories.OrderBy(u=> u.DisplayOrder))
    { 
      <tr>
       <td>
           @obj.name
       </td>
       <td>
            @obj.DisplayOrder
       </td>
       <td>
           <div class="w-75 btn-group" role="group">
               <a asp-page="/Categories/Edit" asp-route-id="@obj.id" class="btn btn-success mx-2">
                 Edit
               </a>
                   <a asp-page="/Categories/Delete"  asp-route-id="@obj.id" class="btn btn-danger mx-2">
                 Delete
               </a>
           </div>
       </td>
      </tr>
    }
   </tbody>
</table>
</div>