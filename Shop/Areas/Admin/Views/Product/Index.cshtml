@model List<Product>
<partial name="_Notification"/>
<div class="conrainer">
      <div class="row pt-4 pb-3">
          <div class="col-6 ">
              <h2 class="text-primary"> Список товарів </h2>
          </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary">
              Створити новий продукт
            </a>
        </div>
      </div>
<table class= "table table-bordered table-striped">
    <thead>
   <tr>
       <th>Назва</th>
       <th>Автор</th>
       <th>Опис</th>
       <th>Ціна</th>
       <th>Категорія</th> 
   </tr>
   </thead>
   <tbody>
    @foreach(var obj in Model)
    { 
      <tr>
       <td>
           @obj.Title
       </td>
       <td>
            @obj.Author
       </td>
        <td>
            @obj.Description
        </td>
         <td>
            @obj.Price
         </td>
         <td>
            @obj.Category.Name
         </td>
       <td>
           <div class="w-75 btn-group" role="group">
               <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                 Оновити
               </a>
               <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                 Видалити
               </a>
           </div>
       </td>
      </tr>
    }
   </tbody>
</table>
</div>