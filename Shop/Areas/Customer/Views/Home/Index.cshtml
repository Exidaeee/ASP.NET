@model IEnumerable<Product>

<div class="row pb-3" >
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="card border-0 p-3 shadow border-top border-5 rounded">
                    <img src="@product.ImgUrl" class="card-img-top rounded" />
                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-primary text-center">@product.Author</p>
                        </div>
                        <div class="pl-1">
                            <p class="text-primary text-opacity-75 text-center">@product.Price грн.</p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Deteils" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                           Детальніше
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

